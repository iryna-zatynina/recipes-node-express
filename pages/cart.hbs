<h1>Cart</h1>

{{#if dishes.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each dishes}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn brn-small">delete</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Total: </strong><span class="price">{{price}}</span></p>
    {{else}}
    <p>Cart is empty</p>
{{/if}}
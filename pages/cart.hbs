<h1>Cart</h1>

<div id="cart">
    {{#if dishes.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each dishes}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td class="price">{{price}}</td>
                        <td>
                            <button class="btn brn-small js-remove" data-id="{{id}}">delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p class="total">Total: <span class="price">{{price}}</span></p>
        <form action="/orders" method="post">
            <button type="submit" class="btn">Order</button>
        </form>
        {{else}}
        <p>Cart is empty</p>

    {{/if}}
</div>